<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#00000000"
    android:descendantFocusability="blocksDescendants"
    android:padding="10dp">

    <ImageView
        android:id="@+id/reinforce"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginRight="10dp"
        android:background="#00000000"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="#00000000">

        <TextView
            android:id="@+id/skill_title"            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="연타 Lv. 1"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/skill_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="연타 횟수 : 10 -> 11"
            android:textColor="#ff0000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/skill_needGold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="강회 비용 : 500"
            android:textColor="#ffff00"
            android:textSize="20dp" />

    </LinearLayout>
</LinearLayout>